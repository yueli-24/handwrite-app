{
  "builds": [
    { "src": "api/python/*.py", "use": "@vercel/python" },
    { "src": "package.json", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/api/generate", "dest": "/api/python/generate.py" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "PYTHON_ENABLED": "true",
    "PYTHONPATH": "/var/task",
    "PYTHONUNBUFFERED": "1"
  },
  "functions": {
    "api/python/*.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
