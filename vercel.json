{
  "functions": {
    "api/python/generate.py": {
      "maxDuration": 30,
      "memory": 2048
    }
  }
}
{
  "builds": [
    { 
      "src": "api/python/*.py", 
      "use": "@vercel/python",
      "config": {
        "installCommand": "pip install -r requirements.txt"
      }
    },
    { "src": "package.json", "use": "@vercel/next" }
  ],
  "routes": [
    { 
      "src": "/api/generate", 
      "dest": "/api/python/generate.py",
      "methods": ["POST"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "PYTHON_ENABLED": "true",
    "PYTHONPATH": "/var/task",
    "PYTHONUNBUFFERED": "1",
    "PYTHON_VERSION": "3.12"
  }
}
