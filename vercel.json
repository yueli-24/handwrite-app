{
  "builds": [
    { 
      "src": "api/python/*.py", 
      "use": "@vercel/python",
      "config": {
        "installCommand": "pip install -r requirements.txt",
        "pythonVersion": "3.9"
      }
    },
    { "src": "package.json", "use": "@vercel/next" }
  ],
  "routes": [
    { 
      "src": "/api/generate", 
      "dest": "/api/python/generate.py",
      "methods": ["POST"]
    },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "PYTHON_ENABLED": "true",
    "PYTHONPATH": "/var/task",
    "PYTHONUNBUFFERED": "1"
  }
}
